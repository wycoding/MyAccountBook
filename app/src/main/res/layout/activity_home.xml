<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pers.wang.accountbook.activitiy.HomeActivity">

    <RelativeLayout
        android:id="@+id/layout_home_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/tv_home_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E8E8"
            android:gravity="center"
            android:src="@drawable/btn_list"
            android:text="Account Book"
            android:textColor="#000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/iv_home_menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignRight="@id/tv_home_name"
            android:layout_margin="12dp"
            android:src="@drawable/btn_list" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_home_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_home_title"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/rmb" />

        <EditText
            android:focusableInTouchMode="true"
            android:id="@+id/et_home_num"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/edit_shape"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#089c29"
            android:textSize="48sp" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_home_categroy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_home_calc"
        android:layout_below="@id/layout_home_num"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_home_calc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textSize="48sp">

                    <Button
                        android:id="@+id/num1"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num2"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num3"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="48sp" />

                </LinearLayout>

            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textSize="48sp">

                    <Button
                        android:id="@+id/num4"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num5"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num6"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:textSize="48sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textSize="48sp">

                    <Button
                        android:id="@+id/num7"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="7"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num8"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="8"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/num9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9"
                        android:textSize="48sp" />
                </LinearLayout>
            </TableRow>

            <TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:textSize="48sp">

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="确定"
                        android:textSize="48sp" />


                    <Button
                        android:id="@+id/num0"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textSize="48sp" />

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="match_parent"
                        android:layout_height="84dp"
                        android:layout_weight="1"
                        android:text="删除"
                        android:textSize="48sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
